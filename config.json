{
    "name": "Garaham", 
    "n_gpu": 1,
    "data_dir": "data/ODIR-5K/csv/full_prepro.csv",

    "arch": {
        "type": "Odr_model",
        "args": {}
    },

    "model": {
        "type": "AlexNet",
        "args": {
            "num_classes": 8,
            "feature_extract": true,
            "use_pretrained": true        
        }
    },


    "data_loader": {
        "type": "odr_data_loader", 
        "args":{
            "data_dir": "data/ODIR-5K/csv/full_prepro.csv",
            "image_dir": "data/ODIR-5K/ODIR-5K/preprocess_graham/",
            "batch_size": 128,
            "shuffle": false,
            "equal_dist":true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "momentum": 0.9
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 150,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 50,

        "tensorboard": true
    }
}