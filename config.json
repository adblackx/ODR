{
    "name": "Garaham", 
    "n_gpu": 1,
    "data_dir": "data/ODIR-5K/csv/full_prepro.csv",
    "mult_data": false,

    "arch": {
        "type": "Odr_model",
        "args": {}
    },

    "model": {
        "type": "Model_Mult",
        "args": {
            "num_classes": 8,
            "feature_extract": false,
            "use_pretrained": true,
            "model_name": "alexnet"        
        }
    },

    "data_loader": {
        "type": "odr_data_loader", 
        "args":{
            "data_dir": "data/ODIR-5K/csv/full_prepro.csv",
            "image_dir": "data/ODIR-5K/ODIR-5K/preprocess_graham/",
            "batch_size": 200,
            "shuffle": false,
            "equal_dist":true,
            "validation_split": 0.3,
            "num_workers": 2,
            "extended": false,
            "dataAug": false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.01,
            "weight_decay": 0,
            "momentum": 0.9
        }
    },
    "loss": "cross_entropy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 40,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 50,
        "save":false,

        "tensorboard": true
    }
}